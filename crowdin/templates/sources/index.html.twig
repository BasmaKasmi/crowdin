{% extends 'base.html.twig' %}

{% block title %}Sources index{% endblock %}

{% block body %}
    <h1>Sources index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>LangueOrigin</th>
                <th>LangueTraduction</th>
                <th>Traduction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for source in sources %}
            <tr>
                <td>{{ source.id }}</td>
                <td>{{ source.titre }}</td>
                <td>{{ source.contenu }}</td>
                <td>{{ source.langueOrigin }}</td>
                <td>{{ source.LangueTraduction }}</td>
                <td>{{ source.traduction }}</td>
                <td>
                    <a href="{{ path('app_sources_show', {'id': source.id}) }}">show</a>
                    <a href="{{ path('app_sources_edit', {'id': source.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sources_new',{'id': idProject}) }}">Creer une source</a>
{% endblock %}
